# =============================================================================
# .env.example
# Environment variables configuration
# Copy this file to .env and fill in your values
# =============================================================================

# General
ENVIRONMENT=local
DEBUG=False
APP_NAME=RAG Chatbot
APP_VERSION=1.0.0

# Database (PostgreSQL)
DATABASE_URL=postgresql://chatbot:chatbot@localhost:5432/chatbot
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Qdrant (Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
VECTOR_SIZE=1024
COLLECTION_NAME=documents

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=mxbai-embed-large
LLM_MODEL=mistral

# OpenAI (Optional)
OPENAI_API_KEY=

# Anthropic/Claude (Optional)
ANTHROPIC_API_KEY=

# Google/Gemini (Optional)
GOOGLE_API_KEY=

# OpenRouter (Optional)
OPENROUTER_API_KEY=

# File Storage
FILE_STORAGE_TYPE=local
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=104857600

# AWS S3 (if FILE_STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:4200"]

# Security
SECRET_KEY=your-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Celery (Background Jobs)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# RAG Settings
TRACKING_FILE=./data/sync_tracking.json
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200

# Vault Path (for document syncing)
VAULT_PATH=./data/vault
